<h1>Categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Items Count</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.products.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Create New Category', new_admin_category_path, class: 'btn btn-primary' %>